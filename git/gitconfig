[alias]
	auto-rebase = "!GIT_EDITOR=true git rebase --interactive --autosquash --autostash"
	fixup = "!git commit --fixup"
	squash = "!git commit --squash"
	tree = "log --oneline --graph"

[commit]
	gpgSign = true
	verbose = true

[core]
	excludesFile = ~/.gitignore
	pager = delta

[delta]
	line-numbers = true
	navigate = true

[diff]
	colorMoved = default
	tool = vimdiff

[diff "ansible-vault"]
	cachetextconv = false
	textconv = PAGER=cat ansible-vault view

[fetch]
	prune = true
	pruneTags = true

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
	smudge = git-lfs smudge -- %f

[init]
	defaultBranch = main

[interactive]
	diffFilter = delta --color-only

[log]
	abbrevCommit = true

[merge]
	conflictStyle = diff3
	tool = vimdiff

[pull]
	rebase = false

[rebase]
	autoSquash = true

