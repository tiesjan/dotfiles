# Always output color, even if piping to a another program
--color

# Define colors
--color-filename=bold blue
--color-match=black on_yellow
--color-lineno=bold yellow
--color-colno=bold yellow

# Define directories and files to ignore
--ignore-dir=.git
--ignore-dir=.idea
--ignore-dir=.junit
--ignore-dir=.mypy_cache
--ignore-dir=.pytest_cache
--ignore-dir=.tox
--ignore-dir=.virtualenv
--ignore-dir=__pycache__
--ignore-dir=htmlcov
--ignore-file=ext:orig

# Define pager
--pager=less -FR

# Use smart case sensitivity
--smart-case

# Always sort files
--sort-files
